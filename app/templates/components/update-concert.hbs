{{#if updateConcertForm}}
  <h4>Update {{concert.artist}} - {{concert.date}} - {{concert.venue}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="artist">Artist</label>
        {{input class="form-control" value=concert.artist id="artist" placeholder=concert.artist }}
      </div>
      <div class="form-group">
        <label for="opener">Opener</label>
        {{input class="form-control" value=concert.opener id="opener" placeholder=concert.opener}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input class="form-control" value=concert.date id="date" placeholder=concert.date}}
      </div>
      <div class="form-group">
        <label for="venue">Venue</label>
        {{input class="form-control" value=concert.venue id="venue" placeholder=concert.venue}}
      </div>
      <button class='btn' {{action "update" concert}}>Save</button>
    </form>

  </div>
  {{else}}
  <br>
  <button class="btn btn-xs" {{action 'updateConcertForm'}}>Update</button>
{{/if}}
