{{#each concerts as |concert|}}
  <div class="boxed">
    {{#link-to 'concert' concert.id}}
    <h2>{{concert.artist}}</h2>
    <hr>
    <h5>{{concert.date}}</h5>
    <h5>{{concert.venue}}</h5>
    {{/link-to}}
  </div>
{{/each}}
<br>
<br>
<div class="boxed">
  <form>
    <h2>Add an Event</h2>
    <div class="form-group">
      <label for="artist">Artist</label>
      {{input class="form-control" value=artist id="artist"}}
    </div>
    <div class="form-group">
      <label for="opener">Opener</label>
      {{input class="form-control" value=opener id="opener"}}
    </div>
    <div class="form-group">
      <label for="date">Date</label>
      {{input class="form-control" value=date id="date"}}
    </div>
    <div class="form-group">
      <label for="venue">Opener</label>
      {{input class="form-control" value=venue id="venue"}}
    </div>
    <button class='btn btn-xs' {{action "saveConcert"}}>Add Concert</button>
  </form>

</div>
