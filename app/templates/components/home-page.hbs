{{#each concerts as |concert|}}
  <ul>
    {{#link-to 'concert' concert.id}}<li>{{concert.artist}}</li>{{/link-to}}
  </ul>
  <hr>
{{/each}}

<form>
  <div class="form-group">
    <label for="artist">Artist</label>
    {{input class="form-control" value=artist id="artist" }}
  </div>
  <div class="form-group">
    <label for="opener">Opener</label>
    {{input class="form-control" value=opener id="opener"}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    {{input class="form-control" value=date id="date"}}
  </div>
  <div class="form-group">
    <label for="venue">Opener</label>
    {{input class="form-control" value=venue id="venue"}}
  </div>
  <button class='btn' {{action "saveConcert"}}>Add Concert</button>
</form>
